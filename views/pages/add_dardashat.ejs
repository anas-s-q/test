<!DOCTYPE html>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
               Dardashat
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" type="get" action="/dardashat-attendance/">
                            <div class="form-group">
                                <label>Name</label>
								<input type="text" name="name" class="form-control">
							</div>
							<div class="form-group">
								<label>Semester</label>
								<select class="form-control">
									<option value="Nationality">First Semester</option>
									<option value="Nationality">Second Semester</option>
									<option value="Nationality">Summer Semester</option>	
								</select>
							</div>
							<div class="form-group">
								<label>Date</label>
								<div class="input-group date">
									<input type="text" class="form-control">
									<span class="input-group-addon">
										<i class="glyphicon glyphicon-th"></i>
									</span>
								</div>
							</div>
							<div class="form-group">
							<!--(If Internal: Name / Text)
							(If External: Name / Text + Organization / Text + Email / Text + Mobile / Number)-->
                                <label>Facilitator</label>
                                <div class="radio">
	                                <label>
	                                	<input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>Internal
	                                </label>
                                </div>
                                <div class="radio">
                                    <label>
                                    	<input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">External
                                    </label>
                                </div>
                                <div class="radio">
	                                <label>
	                                	<input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>(If Internal: Name / Text)
	                                </label>
                                </div>
                                <div class="radio">
                                    <label>
                                    	<input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">(If External: Name / Text + Organization / Text + Email / Text + Mobile / Number)
                                    </label>
                                </div>
							</div>
							<div class="form-group">
                                <label>Material</label>								
								<input type="text" name="name" class="form-control">
							</div>
							<div class="form-group">
                                <label>Notes</label>
                                <textarea class="form-control" rows="3"></textarea>
                            </div>
                            <button class="btn btn-primary">Add</button>
						</form>											
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
   <!-- /.col-lg-12 -->
</div>
