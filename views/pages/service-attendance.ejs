<!DOCTYPE html>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
               Community Service Attendance
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form">
                        	<div class="form-group">
								<label>Semester</label>
								<select class="form-control">
									<option value="Address">First Semester </option>
									<option value="Address"> Second Semester</option>
									<option value="Nationality">Summer Semester</option>
								</select>							
							</div>
							<div class="form-group">
							<!--number-->
								<label>Date</label>
							</div>
							<div class="input-group date">
								<input type="text" class="form-control">
								<span class="input-group-addon">
									<i class="glyphicon glyphicon-th"></i>
								</span>
							</div>
							<div class="form-group">
							 <!-- Service Attendance -->
							<!--(If active tick boxes: Done / Not Done with reason / Not Done without reason) ( If not active: Reason / Text) -->
                                <label>Community Service (Show table of 10 latest unfilled dates from schedule)</label>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">Active
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">Not Active
                                    </label>
                                </div>
                                 <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">(If active tick boxes: Done / Not Done with reason / Not Done without reason)
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">( If not active: Reason / Text)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                            <!-- Service Attendance -->
                            <!--(If Yes: Hour / Number + Date / Calendar + Time / Text + Description / Text)-->
                                <label>Extra or Compensation - Community Service</label>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">Yes
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">No
                                    </label>
                                </div>
                                 <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">(If Yes: Hour / Number + Date / Calendar + Time / Text + Description / Text)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
								<label>Documentation Type</label>
								<select class="form-control">
									<option value="Nationality">Template</option>
									<option value="Nationality">Template & Report</option>
									<option value="Nationality">Template & Pictures </option>
									<option value="Nationality">Template & Report & Pictures</option>
								</select>
							</div>
							<!--Total hours for scholar  Automatic Calculation -->

                        </form>											
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
   <!-- /.col-lg-12 -->
</div>
