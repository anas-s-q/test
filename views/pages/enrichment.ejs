<!DOCTYPE html>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
               Enrichment
            </div>
            <div class="panel-body">
                <form role="form" type="get" action="/dardashat-attendance/">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
								<label>Semester</label>
								<select class="form-control">
									<option value="Nationality">First Semester</option>
									<option value="Nationality">Second Semester</option>
									<option value="Nationality">Summer Semester</option>	
								</select>
							</div>
							<div class="form-group">
								<label>Date Or Period</label>
							</div>
							<div class="input-group date">
								<input type="text" class="form-control">
								<span class="input-group-addon">
									<i class="glyphicon glyphicon-th"></i>
								</span>
							</div>
							<div class="form-group">
								<label>Type</label>
								<select class="form-control">
									<option value="Nationality">Workshop / Training</option>
									<option value="Nationality">ICDL</option>
									<option value="Nationality">English</option>
									<option value="Nationality">Business </option>
									<option value="Nationality">Conference</option>	
								</select>
							</div>
							<div class="form-group">
                                <label>Subject</label>
								<input type="text" name="name" class="form-control">
							</div>
							<div class="form-group">
                                <label>Material</label>
								<input type="text" name="name" class="form-control">
							</div>
							<div class="form-group">
                                <label>Notes</label>
                                <textarea class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Description</label>
                                <textarea class="form-control" rows="3"></textarea>
                            </div>
                            <div class="form-group">
                                <label>Facilitator</label>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="facilitator_source" value="1" checked>Internal
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="facilitator_source" value="2">External
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Name</label>                             
                                <input type="text" name="name" class="form-control">
                            </div>
                            <div class="form-group js_facilitator">
                                <label>Organization</label>                             
                                <input type="text" name="name" class="form-control">
                            </div>
                            <div class="form-group js_facilitator">
                                <label>Email</label>                             
                                <input type="email" name="name" class="form-control">
                            </div>
                            <div class="form-group js_facilitator">
                                <label>Mobile</label>                             
                                <input type="text" name="name" class="form-control">
                            </div>
                            <script type="text/javascript">
                                function preparereFacilitatorSource(){
                                    var radioObj=$('input[type=radio][name=facilitator_source]:checked')
                                    if (radioObj.val() == '2') {
                                        $(".js_facilitator").show();
                                    }else{
                                        $(".js_facilitator").hide();
                                    }
                                }
                                $(function(){
                                    $('input[type=radio][name=facilitator_source]').change(preparereFacilitatorSource);
                                    preparereFacilitatorSource();
                                });
                            </script>
                            <!-- Attendance and Norms for each current scholar  (If planned to attend: Below options)-->		
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Add</button>
                </div>
                <!-- /.row (nested) -->
                </form>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
   <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
